{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "ES6"
    ],
    "module": "commonjs",
    "outDir": "./dist",
    "removeComments": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "baseUrl": "src",
    "rootDirs": [
      "src",
      "test"
    ],
    "paths": {
      "@/test/*": [
        "../test/*"
      ],
      "@/*": [
        "*"
      ]
    }
  },
  "include": [
    "src",
    "test"
  ],
  "exclude": []
}